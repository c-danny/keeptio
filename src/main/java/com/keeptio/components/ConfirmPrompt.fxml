<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>


<VBox alignment="CENTER" prefHeight="600.0" prefWidth="1000.0" styleClass="kpt-confirm-modal-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="500.0">
         <children>
            <VBox alignment="CENTER" prefHeight="175.0" spacing="10.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="kpt-confirm-title" text="Are you sure?" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="kpt-confirm-caption" text="This action cannot be undone." />
               </children>
            </VBox>
            <HBox alignment="TOP_CENTER" prefHeight="100.0">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel">
                     <graphic>
                        <FontIcon iconLiteral="bi-x" />
                     </graphic>
                     <styleClass>
                        <String fx:value="danger" />
                        <String fx:value="kpt-confirm-button" />
                     </styleClass>
                  </Button>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="confirmButton" mnemonicParsing="false" text="Confirm">
                     <graphic>
                        <FontIcon iconLiteral="bi-check" />
                     </graphic>
                     <styleClass>
                        <String fx:value="success" />
                        <String fx:value="kpt-confirm-button" />
                     </styleClass>
                  </Button>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
         <styleClass>
            <String fx:value="kpt-padding-outer" />
            <String fx:value="kpt-confirm-modal" />
         </styleClass>
      </VBox>
   </children>
</VBox>
